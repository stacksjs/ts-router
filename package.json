{
  "name": "bun-router",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "A Redis-backed job queue built for Bun.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/bun-router#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/bun-router.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/bun-router/issues"
  },
  "keywords": [
    "queue",
    "job",
    "redis",
    "worker",
    "task",
    "scheduler",
    "bun",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["README.md", "dist"],
  "scripts": {
    "build": "bun --bun build.ts && bun run compile",
    "compile": "bun build ./bin/cli.ts --compile --minify --outfile bin/router",
    "compile:all": "bun run compile:linux-x64 && bun run compile:linux-arm64 && bun run compile:windows-x64 && bun run compile:darwin-x64 && bun run compile:darwin-arm64",
    "compile:linux-x64": "bun build ./packages/bun-router/bin/cli.ts --compile --minify --target=bun-linux-x64 --outfile ./packages/bun-router/dist/bin/router-linux-x64",
    "compile:linux-arm64": "bun build ./packages/bun-router/bin/cli.ts --compile --minify --target=bun-linux-arm64 --outfile ./packages/bun-router/dist/bin/router-linux-arm64",
    "compile:windows-x64": "bun build ./packages/bun-router/bin/cli.ts --compile --minify --target=bun-windows-x64 --outfile ./packages/bun-router/dist/bin/router-windows-x64.exe",
    "compile:darwin-x64": "bun build ./packages/bun-router/bin/cli.ts --compile --minify --target=bun-darwin-x64 --outfile ./packages/bun-router/dist/bin/router-darwin-x64",
    "compile:darwin-arm64": "bun build ./packages/bun-router/bin/cli.ts --compile --minify --target=bun-darwin-arm64 --outfile ./packages/bun-router/dist/bin/router-darwin-arm64",
    "zip": "bun run zip:all",
    "zip:all": "bun run zip:linux-x64 && bun run zip:linux-arm64 && bun run zip:windows-x64 && bun run zip:darwin-x64 && bun run zip:darwin-arm64",
    "zip:linux-x64": "zip -j ./packages/bun-router/dist/bin/router-linux-x64.zip ./packages/bun-router/dist/bin/router-linux-x64",
    "zip:linux-arm64": "zip -j ./packages/bun-router/dist/bin/router-linux-arm64.zip ./packages/bun-router/dist/bin/router-linux-arm64",
    "zip:windows-x64": "zip -j ./packages/bun-router/dist/bin/router-windows-x64.zip ./packages/bun-router/dist/bin/router-windows-x64.exe",
    "zip:darwin-x64": "zip -j ./packages/bun-router/dist/bin/router-darwin-x64.zip ./packages/bun-router/dist/bin/router-darwin-x64",
    "zip:darwin-arm64": "zip -j ./packages/bun-router/dist/bin/router-darwin-arm64.zip ./packages/bun-router/dist/bin/router-darwin-arm64",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "prepublishOnly": "bun --bun run build && bun run compile:all && bun run zip",
    "test": "bun test",
    "lint": "bunx --bun eslint .",
    "lint:fix": "bunx --bun eslint . --fix",
    "changelog": "bunx logsmith --verbose",
    "changelog:generate": "bunx logsmith --output CHANGELOG.md",
    "release": "bun run changelog:generate && bunx bumpx prompt --recursive",
    "postinstall": "bunx git-hooks",
    "dev:docs": "bun --bun vitepress dev docs",
    "build:docs": "bun --bun vitepress build docs",
    "preview:docs": "bun --bun vitepress preview docs",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "devDependencies": {
    "@stacksjs/bumpx": "^0.1.19",
    "@stacksjs/docs": "^0.70.23",
    "@stacksjs/eslint-config": "^4.10.2-beta.3",
    "@stacksjs/gitlint": "^0.1.5",
    "@stacksjs/logsmith": "^0.1.8",
    "@types/bun": "^1.2.21",
    "buddy-bot": "^0.8.10",
    "bun-git-hooks": "^0.2.19",
    "bun-plugin-dtsx": "^0.21.12",
    "bunfig": "^0.10.0",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "unconfig": "0.3.10"
  },
  "git-hooks": {
    "pre-commit": {
      "staged-lint": {
        "*.{js,ts,json,yaml,yml,md}": "bunx --bun eslint --fix"
      }
    },
    "commit-msg": "bunx gitlint --edit .git/COMMIT_EDITMSG"
  },
  "workspaces": [
    "packages/*"
  ]
}
